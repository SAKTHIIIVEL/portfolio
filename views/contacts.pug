extends layouts/base.pug
block content 
    main 
        section(class="section")
            if contacts.length > 0
                table
                    thead
                        tr
                            th Name
                            th Email
                            th Message
                    tbody
                        each contact in contacts
                            tr
                                td= contact.name
                                td= contact.email
                                td= contact.msg
            else
                p No contacts found.

            a(href="/" class="btn") Return to Home
            
    